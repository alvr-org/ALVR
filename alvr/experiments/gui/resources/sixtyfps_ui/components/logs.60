import { ScrollView } from "sixtyfps_widgets.60";

struct LogEntry := {
    time: string,
    type: string,
    message: string,
}

export LogsPanel := ScrollView {
    property<[LogEntry]> entries;

    VerticalLayout {
        for entry in entries : Rectangle {
            height: 20px;

            background: entry.type == "error" ? red : (entry.type == "warning" ? yellow : (entry.type == "info" ? lightblue : white));

            HorizontalLayout {
                Text {
                    width: 100px;
                    text: entry.time;
                }
                Text {
                    width: 60px;
                    text: entry.type;
                }
                Text {
                    text: entry.message;
                }
            }
        } 
    }
}