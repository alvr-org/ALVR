{
  "name": "cuda",
  "buildsystem": "simple",
  "build-commands": [
    "wget --progress=bar https://developer.download.nvidia.com/compute/cuda/12.4.1/local_installers/cuda_12.4.1_550.54.15_linux.run -O /run/build/cuda/cuda.run",
    "sh /run/build/cuda/cuda.run --silent --extract=/run/build/cuda",
    "ls -al /run/build/cuda"
  ]
}
