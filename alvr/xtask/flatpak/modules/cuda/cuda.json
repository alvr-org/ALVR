{
  "name": "cuda",
  "buildsystem": "simple",
  "build-commands": [
    "mkdir -p /app/utils/alvr/tmp/cuda",
    "wget --progress=bar https://developer.download.nvidia.com/compute/cuda/12.4.1/local_installers/cuda_12.4.1_550.54.15_linux.run -O /app/utils/alvr/tmp/cuda/cuda.run",
    "sh /app/utils/alvr/tmp/cuda/cuda.run --silent --extract=/app/utils/alvr/tmp/cuda",
    "ls -al /app/utils/alvr/tmp/cuda/"
  ]
}
